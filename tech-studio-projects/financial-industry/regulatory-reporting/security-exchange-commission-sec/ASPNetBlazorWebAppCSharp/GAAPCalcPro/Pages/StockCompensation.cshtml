@page
@model GAAPCalcPro.Pages.StockCompensationModel
@{
    ViewData["Title"] = "Stock Compensation Calculation";
}

<h2>Stock Compensation Calculation</h2>

<form method="post">
    <div class="form-group">
        <label for="StockPrice">Stock Price</label>
        <input type="number" class="form-control" id="StockPrice" name="StockPrice" value="@Model.StockCompensationData.StockPrice" />
    </div>
    <div class="form-group">
        <label for="StrikePrice">Strike Price</label>
        <input type="number" class="form-control" id="StrikePrice" name="StrikePrice" value="@Model.StockCompensationData.StrikePrice" />
    </div>
    <div class="form-group">
        <label for="Volatility">Volatility</label>
        <input type="number" step="0.01" class="form-control" id="Volatility" name="Volatility" value="@Model.StockCompensationData.Volatility" />
    </div>
    <div class="form-group">
        <label for="TimeToMaturity">Time to Maturity (years)</label>
        <input type="number" step="0.01" class="form-control" id="TimeToMaturity" name="TimeToMaturity" value="@Model.StockCompensationData.TimeToMaturity" />
    </div>
    <div class="form-group">
        <label for="RiskFreeRate">Risk-Free Rate</label>
        <input type="number" step="0.01" class="form-control" id="RiskFreeRate" name="RiskFreeRate" value="@Model.StockCompensationData.RiskFreeRate" />
    </div>
    <button type="submit" class="btn btn-primary">Calculate</button>
</form>

@if (Model.StockCompensationData.OptionValue != 0)
{
    <div class="alert alert-info mt-3">
        <strong>Option Value:</strong> @Model.StockCompensationData.OptionValue
    </div>
}
