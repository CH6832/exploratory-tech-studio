@page
@model GAAPCalcPro.Pages.BusinessCombinationModel
@{
    ViewData["Title"] = "Business Combinations Calculation";
}

<h2>Business Combinations Calculation</h2>

<form method="post">
    <div class="form-group">
        <label for="ConsiderationTransferred">Consideration Transferred</label>
        <input type="number" class="form-control" id="ConsiderationTransferred" name="ConsiderationTransferred" value="@Model.BusinessCombinationData.ConsiderationTransferred" />
    </div>
    <div class="form-group">
        <label for="FairValueOfAssets">Fair Value of Assets Acquired</label>
        <input type="number" class="form-control" id="FairValueOfAssets" name="FairValueOfAssets" value="@Model.BusinessCombinationData.FairValueOfAssets" />
    </div>
    <div class="form-group">
        <label for="FairValueOfLiabilities">Fair Value of Liabilities Assumed</label>
        <input type="number" class="form-control" id="FairValueOfLiabilities" name="FairValueOfLiabilities" value="@Model.BusinessCombinationData.FairValueOfLiabilities" />
    </div>
    <button type="submit" class="btn btn-primary">Calculate</button>
</form>

@if (Model.BusinessCombinationData.Goodwill != 0)
{
    <div class="alert alert-info mt-3">
        <strong>Goodwill:</strong> @Model.BusinessCombinationData.Goodwill
    </div>
}
