@page
@model GAAPCalcPro.Pages.EPSModel
@{
    ViewData["Title"] = "EPS Calculation";
}

<h2>EPS Calculation</h2>

<form method="post">
    <div class="form-group">
        <label for="NetIncome">Net Income</label>
        <input type="number" class="form-control" id="NetIncome" name="NetIncome" value="@Model.EPSData.NetIncome" />
    </div>
    <div class="form-group">
        <label for="NumberOfShares">Number of Shares</label>
        <input type="number" class="form-control" id="NumberOfShares" name="NumberOfShares" value="@Model.EPSData.NumberOfShares" />
    </div>
    <button type="submit" class="btn btn-primary">Calculate</button>
</form>

@if (Model.EPSData.EPS != 0)
{
    <div class="alert alert-info mt-3">
        <strong>EPS:</strong> @Model.EPSData.EPS
    </div>
}
