@page
@model GAAPCalcPro.Pages.RevenueRecognitionModel
@{
    ViewData["Title"] = "Revenue Recognition";
}

<h2>Revenue Recognition</h2>

<form method="post">
    <div class="form-group">
        <label for="ContractRevenue">Contract Revenue</label>
        <input type="number" class="form-control" id="ContractRevenue" name="ContractRevenue" value="@Model.RevenueRecognitionData.ContractRevenue" />
    </div>
    <div class="form-group">
        <label for="PerformanceObligations">Performance Obligations</label>
        <input type="number" class="form-control" id="PerformanceObligations" name="PerformanceObligations" value="@Model.RevenueRecognitionData.PerformanceObligations" />
    </div>
    <button type="submit" class="btn btn-primary">Calculate</button>
</form>

@if (Model.RevenueRecognitionData.RecognizedRevenue != 0)
{
    <div class="alert alert-info mt-3">
        <strong>Recognized Revenue:</strong> @Model.RevenueRecognitionData.RecognizedRevenue
    </div>
}
