@page
@model GAAPCalcPro.Pages.HedgeAccountingModel
@{
    ViewData["Title"] = "Hedge Accounting Calculation";
}

<h2>Hedge Accounting Calculation</h2>

<form method="post">
    <div class="form-group">
        <label for="HedgedItemFairValue">Hedged Item Fair Value</label>
        <input type="number" class="form-control" id="HedgedItemFairValue" name="HedgedItemFairValue" value="@Model.HedgeAccountingData.HedgedItemFairValue" />
    </div>
    <div class="form-group">
        <label for="HedgingInstrumentFairValue">Hedging Instrument Fair Value</label>
        <input type="number" class="form-control" id="HedgingInstrumentFairValue" name="HedgingInstrumentFairValue" value="@Model.HedgeAccountingData.HedgingInstrumentFairValue" />
    </div>
    <button type="submit" class="btn btn-primary">Calculate</button>
</form>

@if (Model.HedgeAccountingData.Effectiveness != 0)
{
    <div class="alert alert-info mt-3">
        <strong>Effectiveness:</strong> @Model.HedgeAccountingData.Effectiveness
    </div>
}
